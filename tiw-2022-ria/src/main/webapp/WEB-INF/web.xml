<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
 	<display-name>tiw-2022-ria</display-name>
 	
	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/tiw-progetto?serverTimezone=UTC</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>password</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<context-param>
    	<param-name>folderPath</param-name>
    	<param-value>/Users/matteospreafico/Desktop/Tecnologie Informatiche per il Web/Immagini/</param-value>
  		<!-- <param-value>/Users/tcalb/Desktop/tiw/immagini/<param-value> -->
  	</context-param>
	
	<filter> 
	      <filter-name>AccessControl</filter-name>
	      <filter-class>it.polimi.tiw.filters.AccessControl</filter-class> 
 	</filter> 
 	<filter-mapping> 
	    <filter-name>AccessControl</filter-name>
	    <url-pattern>/AddComment</url-pattern> 
	    <url-pattern>/AddImage</url-pattern>
	    <url-pattern>/CreateAlbum</url-pattern>
	    <url-pattern>/GetComments</url-pattern> 
	    <url-pattern>/GetImages</url-pattern> 
	    <url-pattern>/GetOtherAlbums</url-pattern> 
	    <url-pattern>/GetUserAlbums</url-pattern>
	    <url-pattern>/GetUserAlbumsByDate</url-pattern>
	    <url-pattern>/Logout</url-pattern>
	    <url-pattern>/SaveOrder</url-pattern>  
 	</filter-mapping>
 
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	
</web-app>